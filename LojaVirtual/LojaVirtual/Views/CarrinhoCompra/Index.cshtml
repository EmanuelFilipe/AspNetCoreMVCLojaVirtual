@model List<LojaVirtual.Models.ProdutoAgregador.ProdutoItem>
@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<section id="order" class="section-content padding-y">

		<h2>Carrinho de Compras</h2>
		<div class="container">

			<div class="row">
				<main class="col-md-12">
					<div class="card">

						<table class="table table-borderless table-shopping-cart">
							<thead class="text-muted">
								<tr class="small text-uppercase">
									<th scope="col">Produto</th>
									<th scope="col" width="160">Quantidade</th>
									<th scope="col" width="140">Preço</th>
									<th scope="col" class="text-right" width="200">Ação</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>
											<figure class="itemside">
												<div class="aside"><img src="images/items/1.jpg" class="img-sm"></div>
												<figcaption class="info">
													<h6 class="title text-truncate">@item.Nome</h6>
													<dl class="dlist-inline small">
														<dt>Size: </dt>
														<dd>XXL</dd>
													</dl>													
												</figcaption>
											</figure>
										</td>
										<td>
											<div class="col-auto">
												<div class="input-group mb-2">
													<input type="hidden" class="inputProdutoId" value="@item.Id" />
													<input type="hidden" class="inputQuantidadeEstoque" value="@item.Quantidade" />
													<input type="hidden" class="inputValorUnitario" value="@item.Valor" />
													<div class="input-group-prepend">
														<a href="#" class="btn btn-primary diminuir">-</a>
													</div>
													<input type="text" style="width: 30px; text-align: center;" readonly="readonly" class="form-control inputQuantidadeProdutoCarrinho" value="@item.QuantidadeProdutoCarrinho" />
													<div class="input-group-append">
														<a href="#" class="btn btn-primary aumentar">+</a>
													</div>
												</div>
											</div>
										</td>
										<td>
											<div class="price-wrap">
												<var class="price">@((item.Valor * item.QuantidadeProdutoCarrinho).ToString("C"))</var>
												<br />
												<small class="text-muted">(@item.Valor.ToString("C") cada)</small>
											</div>
										</td>
										<td class="text-right">
											<a asp-controller="CarrinhoCompra" asp-action="RemoverItem" asp-route-id="@item.Id" class="btn btn-danger">x Remove</a>
										</td>
									</tr>
								}
							</tbody>
						</table>

						<div class="card-body border-top">
							<a href="#" class="btn btn-primary float-md-right"> Make Purchase <i class="fa fa-chevron-right"></i> </a>
							<a href="#" class="btn btn-light"> <i class="fa fa-chevron-left"></i> Continue shopping </a>
						</div>
					</div>

					<div class="alert alert-success mt-3">
						<p class="icontext"><i class="icon text-success fa fa-truck"></i> Free Delivery within 1-2 weeks</p>
					</div>

				</main>
			</div>

		</div> <!-- container .//  -->
	</section>

	<section id="parameters">
		<h2 class="title-doc"># Descrição</h2>
		<div class="row">
			<aside class="col-md-4">
				<h4 class="subtitle-doc">
					Frete
				</h4>
				<div class="code_desc_align">
					<dl class="dlist-align">
						<dt>CEP: </dt>
						<dd><input type="text" name="cep" class="form-control" /></dd>
					</dl>
					<dl class="dlist-align">
						<dt><input type="radio" name="frete" value="sedex" /></dt>
						<dd>Sedex - R$ 99,90</dd>
					</dl>

					<dl class="dlist-align">
						<dt><input type="radio" name="frete" value="pac" /></dt>
						<dd>Sedex - R$ 19,90</dd>
					</dl>

				</div>
			</aside>

			<aside class="col-md-4">
				<h4 class="subtitle-doc">
					Resumo
				</h4>
				<div class="code_desc_right">
					<div class="box">
						<dl class="dlist-align">
							<dt>Subtotal: </dt>
							<dd class="text-right">R$ 120,00</dd>
						</dl>
						<dl class="dlist-align">
							<dt>Frete: </dt>
							<dd class="text-right">R$ 66,30</dd>
						</dl>

						<dl class="dlist-align">
							<dt>TOTAL: </dt>
							<dd class="text-right">R$ 186,30</dd>
						</dl>
					</div>
				</div>
			</aside>
		</div>
	</section>

</div>
