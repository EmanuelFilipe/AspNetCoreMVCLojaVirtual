@model LojaVirtual.Models.Categoria
@{
	ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<form method="post">
	<input type="hidden" asp-for="Id" />

	<div class="mb-3">
		<label asp-for="Nome"></label>
		<input asp-for="Nome" class="form-control" placeholder="nome da categoria">
		<span asp-validation-for="Nome" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Slug"></label>
		<input asp-for="Slug" class="form-control" placeholder="nome do Slug da categoria">
		<span asp-validation-for="Slug" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="CategoriaPaiId"></label>
		<select asp-for="CategoriaPaiId" class="form-control" asp-items="@ViewBag.Categorias">
			<option value="">Selecione</option>
		</select>
		<span asp-validation-for="CategoriaPaiId" class="text-danger"></span>
	</div>
	<a asp-action="Index" class="btn btn-secondary">Voltar</a>
	<button type="submit" class="btn btn-primary">Salvar</button>
</form>